<ExtensionManifest Version="5.0" ExtensionBundleId="com.example.AnywherePanel" ExtensionBundleVersion="1.0.0"
ExtensionBundleName="AnywherePanel" 
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<ExtensionList>
		<Extension Id="com.example.AnywherePanel.extension" Version="1.0" />
	</ExtensionList>
	<ExecutionEnvironment>
		<HostList>
			<Host Name="PPRO" Version="[8.0,20.0]" />
            <Host Name="PRLD" Version="[3.2,20.0]" />
		</HostList>
		<LocaleList>
			<Locale Code="All" />
		</LocaleList>
		<RequiredRuntimeList>
			<RequiredRuntime Name="CSXS" Version="5.0" />
		</RequiredRuntimeList>
	</ExecutionEnvironment>

	<DispatchInfoList>
		<Extension Id="com.example.AnywherePanel.extension">
			<DispatchInfo >
				<Resources>
					<MainPath>./index.html</MainPath>
                    <ScriptPath>./jsx/init.jsx</ScriptPath>
				</Resources>
				<Lifecycle>
					<AutoVisible>true</AutoVisible>
				</Lifecycle>
				<UI>
					<Type>Panel</Type>
					<Menu>Anywhere Example Panel</Menu>
					<Geometry>
						<Size>
							<Height>650</Height>
							<Width>600</Width>
						</Size>
					</Geometry>
				</UI>
			</DispatchInfo>
		</Extension>
	</DispatchInfoList>
</ExtensionManifest>
