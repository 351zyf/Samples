<ExtensionManifest Version="4.0" ExtensionBundleId="com.adobe.CueSheeter" ExtensionBundleVersion="1.0.1"
ExtensionBundleName="CueSheeter" 
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<ExtensionList>
		<Extension Id="com.adobe.CueSheeter" Version="1.0.0" />
	</ExtensionList>
	<ExecutionEnvironment>
		<HostList>
			<Host Name="PPRO" Version="[8.0,9.9]" />
		</HostList>
		<LocaleList>
			<Locale Code="All" />
		</LocaleList>
		<RequiredRuntimeList>
			<RequiredRuntime Name="CSXS" Version="6.0" />
		</RequiredRuntimeList>
	</ExecutionEnvironment>

	<DispatchInfoList>
		<Extension Id="com.adobe.CueSheeter">
			<DispatchInfo >
				<Resources>
					<MainPath>./index.html</MainPath>
					<ScriptPath>./CueSheeter.jsx</ScriptPath>
				</Resources>
				<Lifecycle>
					<AutoVisible>true</AutoVisible>
				</Lifecycle>
				<CEFCommandLine>
				    <Parameter>--allow-file-access</Parameter>
				    <Parameter>--allow-file-access-from-files</Parameter>
				</CEFCommandLine>
				<UI>
					<Type>Panel</Type>
					<Menu>CueSheeter</Menu>
					<Geometry>
						<Size>
							<Height>100</Height>
							<Width>300</Width>
						</Size>
					</Geometry>
				</UI>
			</DispatchInfo>
		</Extension>
	</DispatchInfoList>
</ExtensionManifest>
